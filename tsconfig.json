{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "baseUrl": ".",
    "noImplicitAny": false,
    "paths": {
      "*": ["src/*"],
      "hocs": ["./src/hocs"],
      "hocs/*": ["./src/hocs/*"],
      "hooks": ["./src/hooks"],
      "hooks/*": ["./src/hooks/*"],
      "components/*": ["./src/components/*"],
      "api/*": ["./src/api/*"],
      "screens/*": ["./src/screens/*"],
      "assets/*": ["./src/assets/*"]
    }
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "**/*.test.ts/*",
    "**/*.test.tsx/*",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    ".eslintrc.js",
    "ios",
    "android",
    "build"
  ]
}
