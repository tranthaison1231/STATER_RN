{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6", "dom"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"],
      "api/*": ["src/api/*"],
      "styles/*": ["src/styles/*"],
      "navigation/*": ["src/navigation/*"],
      "screens/*": ["src/screens/*"],
      "components/*": ["src/components/*"],
      "store/*": ["src/store/*"],
      "ui/*": ["src/ui/*"],
      "hooks/*": ["src/hooks/*"],
      "platforms/*": ["src/platforms/*"],
      "utils/*": ["src/utils/*"],
      "redux/*": ["src/redux/*"]
    }
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "**/*.test.ts/*",
    "**/*.test.tsx/*",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    ".eslintrc.js",
    "ios",
    "android",
    "build",
    "jest.config.js"
  ]
}
